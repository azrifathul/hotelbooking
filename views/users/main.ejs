<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Travekola</title>
  <link rel="stylesheet" href="style.css" />
  <link rel="preconnect" href="https://fonts.gstatic.com" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<body>
  <%- include('../partials/navbar', {role:role}) %>
    <div class="small-container">
        <h2 class="title">List Hotel</h2>       
        <div class="row">
            <% data.forEach((item) => { %>
                <div class="col-4">
                    <img src="<%= item.image %>">
                    <h4 class="title-hotel"><%= item.name %></h4>
                    <h5 class="hotel-location"><%= item.location %></h5>
                    <h3 class="hotel-price"> <%= item.price %> </h3>
                    <% if(role === 'admin'){ %>
                      <div class="button-container">
                        <a href="/hotels/edit/<%= item.id %>" class="anchor-button">
                        <button class="edit-button" type="button">edit</button>
                        </a>
                        <a href="/hotels/delete/<%= item.id %>" class="anchor-button">
                        <button class="delete-button" type="button">delete</button>
                        </a>
                      </div>
                   <% } %>
                   <% if(role !== 'admin'){ %>
                    <a href="/bookings" class="anchor-button">
                      <button class="booking-button">Booking Sekarang</button>
                    </a>
                   <% } %>
                </div>
           <% }) %>
          
        </div>
</body>
<style>
    * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}

.navbar-title{
  color: #6C6A6A;
  text-decoration: none;
  margin-right: 16px;
}

.navbar{
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    width: 100%;
    z-index: 2;
    position: fixed;
    height: 70px;
    background: white;
    top:0;
    box-shadow: rgba(229, 230, 234, 0.36) 0px 2px 6px 2px;
    justify-content: space-between;
    padding: 0 32px;
}

.right-column{
    display: flex;
    font-size: 14px;
    width: 180px;
    justify-content: space-around;
}

.button-container{
  display: flex;
  justify-content: space-between;
}

 .delete-button, .edit-button, .booking-button{
    width: 100%;
    height: 34px;
    color: white;
    background: #f15c60;
    border-radius: 9px;
    margin-top: 12px;
    border: none;
}

.anchor-button{
  width: 49%;
}

.edit-button{
    background: #E7DE25;
    font-size: 16px;
}

.delete-button{
    font-size: 16px;
}

.title-hotel {
  font-family: "Poppins", sans-serif;
  margin-top: 8px;
  font-size: 16px;
}

.hotel-location{
  font-family: "Poppins", sans-serif;
  font-size: 10px;
  color: grey;
}

.hotel-price{
  font-family: "Poppins", sans-serif;
  color: #42BBD4 ;
}


.container {
  max-width: 1300px;
  margin: auto;
  padding-left: 25px;
  padding-right: 25px;
  /* border: 2px solid; */
}

.row {
  display: flex;
  flex-wrap: wrap;
}


.small-container {
  max-width: 1080px;
  margin: auto;
  padding-top: 25px;
  padding-left: 25px;
  padding-right: 25px;
  margin-top: 90px;
}

.small-container h2 {
  font-family: "Poppins", sans-serif;
  text-align: center;
  margin: auto;
  position: relative;
  line-height: 60px;
  color: black;
  text-shadow: 0px 2px 2px #c48787;
  margin-bottom: 16px;

}

.col-4 {
  flex-basis: 25%;
  padding: 10px;
  min-width: 200px;
  margin-bottom: 50px;
  transition: transform 0.5s;
}

.col-4 img {
  width: 100%;
  border-radius: 8px;
  min-height: 237px;
}

.fa {
  color: rgb(255, 217, 0);
}

.col-4:hover {
  transform: translateY(-5px);
}

.title {
  text-align: center;
  margin: 0 auto 80px;
  position: relative;
  line-height: 60px;
  color: #555;
}

.title::after {
  content: "";
  background: #ff523b;
  width: 80px;
  height: 5px;
  border-radius: 5px;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
</style>

</html>